<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:BIM_Leaders_UI">

    <ResourceDictionary.MergedDictionaries>
        <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Grey" SecondaryColor="Teal" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        <ResourceDictionary Source="Z.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="SCheckBox" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Foreground" Value="White"/>
        <Style.Resources>
            <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="#0062bb"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#0062bb"/>
        </Style.Resources>
    </Style>
</ResourceDictionary>